@model ProjectHack.Models.Category

@{
	ViewBag.Title = "Add Activity";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h2>Add Activity</h2>

@using (Html.BeginForm("SaveActivity", "Activity", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-md-offset-2">
			<div class="form-horizontal">
				<h4>Custom Activity</h4>
				<div class="form-group">

					<div class="col-md-10">
						@Html.Label("Title")
						@Html.TextBox("txtTitle")
						<br />
						@Html.Label("Topics")
						<br />
						@Html.TextBox("txtTopic")
						<br />
						@Html.TextBox("txtTopic1")
						<br />
						@Html.TextBox("txtTopic2")
						@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
					</div>

				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" value="Save category" class="btn btn-default" />
					</div>
				</div>
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>
