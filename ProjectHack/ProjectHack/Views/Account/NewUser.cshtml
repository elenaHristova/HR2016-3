
@{
    ViewBag.Title = "New user";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container slider-content">
	<div class="row">
		<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-12">
			<div class="search-form wow pulse" data-wow-delay="0.8s">
				<h2 style="color: black">Your additional information</h2>
				<h4 style="color: black">We would like to know some information about your lifestyle.</h4>
				<div class="tab-pane" id="register">
					@using (Html.BeginForm("SaveNewUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
					{
						@Html.TextBox("txtFullname", "", new { @class = "home-form-item", placeholder = "Full name" })
						<br />
									@Html.TextBox("txtAge", "", new { @class = "home-form-item", placeholder = "Age" })
						<br/>
						@Html.Label("Male", new { @class = "home-form-checkbox" })
						
						@Html.RadioButton("gender", "Male")
						<br/>
						@Html.Label("Female", new { @class = "home-form-checkbox" })
						@Html.RadioButton("gender", "Female")
							 <br />
									<input type="submit" class="btn btn-default home-form-submit" value="Save" />
					}
				</div>

			</div>
		</div>
	</div>
</div>