@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="slider-area">
    <div class="slider">
        <div id="bg-slider" class="owl-carousel owl-theme">

            <div class="item"><img src="~/Views/Shared/mainLayout/img/slider-image-3.png" alt="Mirror Edge"></div>
            <div class="item"><img src="~/Views/Shared/mainLayout/img/slider-image-2.jpg" alt="The Last of us"></div>
            <div class="item"><img src="~/Views/Shared/mainLayout/img/slider-image-1.png" alt="GTA V"></div>

        </div>
    </div>
    <div class="container slider-content">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-12">

                <div class="search-form wow pulse" data-wow-delay="0.8s">
                    <h2 style="color: black">Web App</h2>
                    <p style="color: black">Some text</p>
                    <div id="home-toggles" class="row">
                        <a href="#login" data-toggle="tab" class="navbar-btn nav-button wow bounceInRight login" data-wow-delay="0.8s">Login</a>
                        <a href="#register" data-toggle="tab" class="navbar-btn nav-button wow fadeInRight" data-wow-delay="0.6s">Sign up</a>
                        <br /><br />
                        <div class="tab-content">
                            <div class="tab-pane active" id="login">
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.TextBox("txtUsername", "", new { @class = "home-form-item", placeholder = "Username or Email" })
                                    <br />
                                    @Html.Password("txtPassword", "", new { @class = "home-form-item", placeholder = "Password" })
                                    <br />
                                    <input type="submit" class="btn btn-default home-form-submit" value="Login" />
                                }

                            </div>
                            <div class="tab-pane" id="register">
                                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.TextBox("txtUsernameRegister", "", new { @class = "home-form-item", placeholder = "Username" })
                                    <br />
                                    @Html.TextBox("txtEmail", "", new { @class = "home-form-item", placeholder = "Email" })
                                    <br />
                                    @Html.Password("txtPasswordRegister", "", new { @class = "home-form-item", placeholder = "Password" })
                                    <br />
                                    <input type="submit" class="btn btn-default home-form-submit" value="Register" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>